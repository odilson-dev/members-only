<h1>All the posts</h1>

<% if user_signed_in? %>
    # show post author name
    <ul>
        <% @posts.each do |post| %>
        <li><%= @members.find(post.user_id).name %></li>
        <li><%= post.message %></li>
        <hr>
        <% end %>
    </ul>
    <p><%= link_to "Create a Post", new_post_path %></p>
    <p><%= link_to "Profile", edit_user_registration_path %></p>
    <p><%= button_to "Log out", destroy_user_session_path, method: :delete %></p>
    

<% else %>
    # show only the post message
    <ul>
        <% @posts.each do |post| %>
        <li><%= post.message %></li>
        <% end %>
    </ul>

    <p><%= link_to "Login", new_user_session_path %></p><br>
    <p><%= link_to "Sign Up", new_user_registration_path %></p>

<% end %>
